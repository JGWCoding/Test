<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="136dp"
        android:layout_height="88dp"
        android:padding="5dp"
        android:layout_marginRight="3dp"
        android:layout_alignParentRight="true"
        android:src="@mipmap/live"/>

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/imageView"
        android:layout_alignParentLeft="true"
        android:padding="10dp"
        android:text="身体生病了怎么办，还不赶快去找医生，要不然就要死了"
        android:textSize="16sp"
        android:ellipsize="end"
        android:lines="2"
        />

    <ImageView
        android:id="@+id/imageView_hot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:src="@mipmap/hot"
        />

    <TextView
        android:id="@+id/tv_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/imageView_hot"
        android:layout_toRightOf="@id/imageView_hot"
        android:layout_marginLeft="10dp"
        android:text="头条新闻"
        />

    <TextView
        android:id="@+id/tv_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_from"
        android:layout_alignBottom="@id/imageView_hot"
        android:layout_marginLeft="10dp"
        android:visibility="visible"
        android:text="0条评论"
        />

    <ImageView
        android:id="@+id/iv_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/imageView_hot"
        android:layout_toLeftOf="@id/imageView"
        android:layout_marginRight="10dp"
        android:src="@mipmap/delete"
        />

    <view
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_below="@id/imageView"
        />

</RelativeLayout>