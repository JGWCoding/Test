<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ywyy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.nightlost.home.activity.MainHomeActivity">

    <!--标题部分-->
    <include layout="@layout/header"/>

    <!--推荐模块一般用TabFragment-->
    <org.itheima.tabindicator.library.TabIndicator
        android:id="@+id/indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ywyy:tiTabTextSize="5sp"
        ywyy:tiTabPaddingBottom="5dp"
        ywyy:tiTabPaddingRight="10dp"
        ywyy:tiTabPaddingLeft="10dp"
        ywyy:tiTabPaddingTop="5dp"
        ywyy:tiTabBackground="@color/color_selected"
        />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v4.view.ViewPager>

</LinearLayout>
